<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.triibe.triibeuserapp.trackData.TrackDataActivity">

    <Button
        android:id="@+id/take_survey_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="takeSurvey"
        android:text="@string/take_survey" />

    <Button
        android:id="@+id/start_tracking_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/take_survey_button"
        android:layout_centerInParent="true"
        android:onClick="startDataTracking"
        android:text="@string/start_data_tracking" />

    <Button
        android:id="@+id/stop_tracking_button"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/take_survey_button"
        android:layout_centerInParent="true"
        android:onClick="stopDataTracking"
        android:text="@string/stop_data_tracking" />
</RelativeLayout>
